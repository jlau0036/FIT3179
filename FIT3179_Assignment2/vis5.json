{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text":"Global Co2 Emissions 2023", "fontSize": 25, "font": "Times New Roman"},
  "data": {
    "url": "https://raw.githubusercontent.com/jlau0036/FIT3179/main/FIT3179_Assignment2/world-data-2023.csv"
  },
  "hconcat": [{
      "height": {"step": 10},
      "width": 400,
      "mark": "bar",
      "transform": [{
        "filter": {"param": "brush"}
      }],
      "encoding": {
        "y": {
          "field": "Country",
          "type": "nominal",
          "axis": {"minExtent": 10},
          "sort": "-x"
        },
        "x": {
          "field": "Co2Emissions",
          "type": "quantitative",
          "axis": {"title": "Co2 Emissions","orient": "top"}

        },
        "tooltip": [{"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Co2Emissions", "type": "quantitative", "title": "Co2 Emissions"}], 
        "color": {"value": "#A7D489"}
      }
    }, {
      "height": 300,
      "width": 200,
      "params": [{
        "name": "brush",
        "select": {
          "type": "interval",
          "encodings": ["y"]
        }
      }],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Country",
          "type": "nominal",
          "sort": "-x",
          "axis": null
        },
        "x": {
          "field":  "Co2Emissions",
          "type": "quantitative",
          "axis": null
        },
        "color": {"value": "#A7D489"}
      }
    }],
    "config": {"title": {"align": "center", "dx": 200, "offset": 20}}
  }
