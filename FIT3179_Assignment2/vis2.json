{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 800,
    "title": {"text":"Global population and urban population with land area 2023", "fontSize": 20, "font": "Times New Roman"},
    "data": {
      "url": "world-data-2023.csv"
    },
    "params": [
      {
        "name": "Population",
  
        "value": 0,
        "bind": {"input": "range", "min": 0, "max": 1000000000, "step": 1000000, "name": "Population: " }
      }
    ],
    "transform":[
      {"filter": "datum.Population > Population"}
    ],
    "encoding": { 
      "x": {"field": "Urban_population", "scale": {"type": "log", "domain":[1000, 1000000000]}, "axis": { "grid": false, "title": "Urban Population", "values": [0, 1000, 10000, 100000, 1000000, 10000000, 100000000, 1000000000]}},
      "y": {"field": "Population", "scale": {"type": "log", "domain":[1000, 10000000000]}, "axis": { "grid": false, "title": "Population", "values": [0, 1000,10000,100000,1000000,10000000,100000000,1000000000,10000000000]}}},
    
      "layer": [
    {
      "mark":{"type": "point"}, 
      "encoding": {
        "color": {"condition": {
          "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'Luxembourg' || datum['Country'] == 'Barbados' || datum['Country'] == 'United Kingdom' ||  datum['Country'] == 'United States of America' ||  datum['Country'] == 'Tuvalu' ||  datum['Country'] == 'Malaysia'",
          "value": "#D2691E"       
         },
        "value": "#765341"},
        "opacity": {"value": 0.8},
        "size": {"field": "LandArea(Km2)", "scale": {"type": "threshold", "domain": [50, 1000, 10000, 1000000, 10000000], 
                 "range": [10, 50, 150, 200, 300, 500]}, "legend": {"format": ".1s", "title": "Land Area per km squared"}}
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -15,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "tooltip": [      
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "LandArea(Km2)", "type": "quantitative", "title": "Land Area (km2)"},
            {"field": "Population", "type": "quantitative", "title": "Population"},
            {"field": "Urban_population", "type": "quantitative", "title": "Urban population"}   
        ],
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'Luxembourg' || datum['Country'] == 'Barbados' || datum['Country'] == 'United Kingdom' ||  datum['Country'] == 'United States of America' ||  datum['Country'] == 'Tuvalu' ||  datum['Country'] == 'Malaysia'",
              "value": 1
            },
            "value": 0
          }
        }
      }
    ],
    "view": {
      "stroke": "transparent"
   }
  }