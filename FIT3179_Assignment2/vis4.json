{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 700,
    "title": {"text":"Global Unemployment Rate 2023 (%)", "fontSize": 25, "font": "Times New Roman", "offset": 30},
    "data": {
      "url": "https://raw.githubusercontent.com/jlau0036/FIT3179/main/FIT3179_Assignment2/world-data-2023.csv"
    },"config": {"numberFormat": "0.2f"},
    "params": [
        {
          "name": "Unemployment_Rate",
    
          "value": 0,
          "bind": {"input": "range", "min": 0, "max": 30, "step": 2, "name": "  Unemployment Rate: "}
          
        }
      ],
    "transform": [{"filter": "datum.Unemploymentrate > 0"},
      {
        "calculate": "datum.Unemploymentrate * 100",
        "as": "Unemployment Rate"
      }, {"filter": "datum.Unemploymentrate * 100  > Unemployment_Rate"}],
    "layer": [
      {"params": [
      {
        "name": "highlight",
        "select": {"type": "point", "on": "mouseover"}
      },
      {"name": "select", "select": "point"}
    ], 
      "mark": {"type": "arc", "innerRadius": 20, "stroke":"white", "strokeOpacity": 0.5}
    },{
      "mark": {"type": "text", "radiusOffset": 40},
      "encoding": {
        "text": {"field": "Country", "type": "nominal"}, 
        "opacity": {
            "condition": { 
                "test": "datum['Country'] == 'South Africa' || datum['Country'] == 'Turkey' || datum['Country'] == 'Italy' || datum['Country'] == 'Armenia' || datum['Country'] == 'Saudi Arabia' || datum['Country'] == 'Malaysia'",
                "value": 1
        }, "value": 0
      }
    }
    }],
    "encoding": {
      "theta": {"field": "Unemployment Rate", "type": "quantitative", "stack": "normalize"},
      "radius": {"field": "Unemployment Rate", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}},
      "color": {"field": "Unemployment Rate", "type": "nominal", "legend": null, "scale": {        
        "type": "bin-ordinal",        
        "domain": [0, 4, 8, 12, 16, 20],        
        "range": ["#DBECF4", "#CADEED", "#B7D0E1", "#91AEC4", "#5F82A2", "#194569"]   
  
        
    } }, 
    "fillOpacity": {
      "condition": {"param": "select", "value": 1},
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {
          "param": "select",
          "empty": false,
          "value": 1
        },
        {
          "param": "highlight",
          "empty": false,
          "value": 1
        }
      ],
      "value": 0.5
    },    
      "tooltip": [{"field": "Country", "type": "nominal", "title": "Country"}, 
                    {"field": "Unemployment Rate", "title": "Unemployment Rate (%)", "format": ".2f"}]
    },
    "view": {
      "stroke": "transparent"
   }
  }
  
  
